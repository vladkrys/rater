@model IEnumerable<RaterApp.Models.RatingProviderModel>

@{
    ViewBag.Title = "Rating Providers";
}

<h2>Rating Providers</h2>

<p>
    @Html.ActionLink("Add new rating provider", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrustScore)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApiUrl)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrustScore)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ApiUrl)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.id  }) |
            @Html.ActionLink("Details", "Details", new {  id=item.id  }) |
            @Html.ActionLink("Delete", "Delete", new {  id=item.id  })
        </td>
    </tr>
}

</table>
